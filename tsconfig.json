{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "lib": ["es2017"],
    "outDir": "./lib",
    "rootDir": "./src",
    "module": "commonjs",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
